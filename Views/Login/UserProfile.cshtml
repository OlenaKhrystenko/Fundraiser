@using CommerceProject.Models;
@model User_1
@{
    ViewData["Title"] = "UserProfile";
    //Layout = "~/Views/Login/UserLayout.cshtml";
    var username = TempData["username"];
    var fullname = TempData["fullname"];
    var dob = TempData["dob"];
    var address = TempData["address"];
    var email = TempData["email"];
    var fundraiser = TempData["fund"];
    var description = TempData["descr"];
    var goal = TempData["goal"];
    var currentamount = TempData["ca"];

    var flist = TempData["flist"] as List<Fundraiser_1>;
}

<form method="post">

<div class="mb-3">
    <table class="table table-bordered table-striped" style="width:100%">
        <tbody>
        
            <tr>
                <td width="15%">
                    @username
                </td>
                <td width="20%">
                    @fullname
                </td>
                
                    <td width="15%">
                    @dob
                    </td>
                    
                    <td width="30%">
                    @address
                    </td>
                 
                    <td width="20%">
                    @email
                    </td>


                    <td>
                        <div class="w-75">                           
                        @Html.ActionLink("Edit", "Edit", "Login", new {username = @username,
                        fullname = @fullname, dob = @dob, address = @address, email = @email}, null );
                    </div>
                    </td>
            </tr>
        
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary" asp-controller="Fundraiser" asp-action="StartFundraiser">START FUNDRAISING</a>
    </div>
    <hr />
 
    @foreach(var f in flist)
    {
        @Html.ActionLink(@f.FundraiserName, "ShowData", "Fundraiser", new {FundraiserName = @f.FundraiserName,
                        Description = @f.FundraiserDescription, CurrentAmount = @f.FundraiserCurrentAmount, Goal = @f.FundraiserGoal}, null );
        <br />
    }
</div>

</form>