            -->
            <script src="https://code.jquery.com/jquery-1.12.4.min.js">
            </script>
            <style type="text/css">
                .selectt {
                    color: #000;
                    padding: 30px;
                    display: none;
                    margin-top: 30px;
                    width: 60%;
                    background: violet
                }

                label {
                    margin-right: 20px;
                }
            </style>

            <div>
                <label>
                    <input asp-for="PaymentMethod" type="radio" name="PaymentMethod" value="CreditOrDebitCard">Credit/DebitCard
                </label>
                <label>
                    <input asp-for="PaymentMethod" type="radio" name="PaymentMethod" value="BankAccount">Bank Account
                </label>
            </div>
            <div class="CreditOrDebitCard selectt">
                <div class="card">
                    <div class="card-header">
                        <h1>Payment Info</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <input class="form-control" placeholder="Name on card">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Card number">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="MM/YY">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="CVC">
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="BankAccount selectt">
                <div class="card">
                    <div class="card-header">
                        <h1>Payment Info</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <input class="form-control" placeholder="Bank name">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Routing number">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Account number">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Name of account holder">
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('input[type="radio"]').click(function () {
                        var inputValue = $(this).attr("value");
                        var targetBox = $("." + inputValue);
                        $(".selectt").not(targetBox).hide();
                        $(targetBox).show();
                    });
                });
            </script>
            <hr />
        <div>
            <button id="btn" asp-controller="Donation" asp-action="MakeDonation" type="submit" class="btn btn-primary" style="width:150px">Submit</button>
        </div>
        <hr />
    </div>

